{% extends 'admin_layout.html.twig' %}

{% block main %}

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Category name</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    {% for category in category %}
        <tr>
            <td>{{category.id}}</td>
            <td>{{category.name}}</td>
            <td><a href="{{path('app_admin_edit_category',{'category':category.id})}}" class="btn btn-primary mx-1">Edit</a>
            <a href="{{path('app_admin_delete_category',{'category':category.id})}}"
            onclick="return confirm('Are you sure you want to delete this category?')" class="btn btn-danger">Delete</a></td>
        </tr>
    {% endfor %}
        <tr>
          <td colspan="3"><a href="{{path('app_admin_create_category')}}" class="btn btn-success w-100">Add new category</a></td>
        </tr>
  </tbody>
</table>
 
<div class="d-flex justify-content-center">
{{knp_pagination_render(category)}}
</div>
{% endblock %}