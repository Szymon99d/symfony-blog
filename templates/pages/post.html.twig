{% extends 'blog_layout.html.twig' %}
{% block title %}{{post.title}}{% endblock %}

{% block content %}
    <div class="container-fluid my-4">
        <h2>{{post.title}}</h2>
        <i class="p-1 bi bi-calendar3"></i> {{post.date|date('d.m.Y')}}
            {% if post.category != null %}
            <a href="{{path('app_blog_category',{'category':post.category.id})}}" class="badge post-category-badge">{{post.category.name}}</a>
            {% endif %}
        <hr>
        <p class="pb-4">{{post.content|raw}}</p>
    </div>
    <div class="mx-auto">
        <a href="{{app.request.headers.get('referer')}}" class="btn btn-md btn-primary px-4">{% trans %}Return to previous page{% endtrans %}</a>
        <a href="{{path('app_blog')}}" class="btn btn-md btn-primary px-4">{% trans %}Return to blog page{% endtrans %}</a>
    </div>
{% endblock %}