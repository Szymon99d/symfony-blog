<div class="ps-2 col-sm-6">
    <h2>{% trans %}Categories{% endtrans %}</h2>
    <ul class="list-group ">
        {% for category in categories %}
        <a href="{{path('app_blog_category',{'category':category.id})}}" class="list-group-item list-group-item-action align-items-start list-group-item-warning mb-1 w-50">
            {{category.name}}
        </a>
        {% endfor %}
    </ul>
</div>
<div class="ps-2 col-sm-6">
    <h2>{% trans %}Latest posts{% endtrans %}</h2>
    <ul class="list-group ">
        {% for post in posts %}
        <a href="{{path('app_post_read',{'id':post.id})}}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-start list-group-item-success w-50 mb-1">
            {{post.title}}
            <span class="badge bg-light text-dark">{% trans %}Date{% endtrans %}: {{post.date|date("d.m.Y")}}</span>
        </a>
        {% endfor %}
    </ul>
</div>